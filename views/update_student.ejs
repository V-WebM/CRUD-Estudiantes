<%- include('include/_header') %>
<br>
<main id="site main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <button type="button" class="btn btn-secondary">
                    <a href="/" style="text-decoration: none; color:white;"><i class="fas fa-angle-double-left"></i>Ver Todos</a>
                </button>

            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Actualizar Estudiante</h2>
            <span class="text-ligth">Puede actualizar los datos con el siguiente formulario</span>

        </div>

        <div class="card" style="padding: 10px;">
        <form method="POST" id="update_student">
            <div class="new_student">
                <div class="form-group">
                    <label for="name" class="text-ligth">Name</label>
                    <input class="form-control" type="hidden" name="id" value="<%= student.id %> ">
                    <input class="form-control" type="text" name="name" value="<%= student.name %>" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="surname" class="text-ligth">Surname</label>
                    <input class="form-control" type="text" name="surname" value="<%= student.surname %> " placeholder="Surname">
                </div>
                <div class="form-group">
                    <label for="Course" class="text-ligth">Course</label>
                    <input class="form-control" type="text" name="course" value="<%= student.course %>" placeholder="Course">
                </div>
                <div class="form-group">
                    <label for="Record" class="text-ligth">Record</label>
                    <input class="form-control" type="number" name="record" value="<%= student.record %>" placeholder="Record">
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </div>
        </form>
        </div>

    </div>
</main>

<%- include('include/_footer') %>